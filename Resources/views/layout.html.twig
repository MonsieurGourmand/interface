<!DOCTYPE html>
<html lang="fr">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>Bienvenue - MonsieurGourmand.com</title>

    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    <link rel="icon" type="image/png" href="https://assets.monsieurgourmand.com/src/favicon.png" />
    <!-- bootstrap & fontawesome -->
    <link rel="stylesheet" href="{{ template }}/assets/css/bootstrap.css" />
    <link rel="stylesheet" href="{{ template }}/components/font-awesome/css/font-awesome.css" />

    <!-- text fonts -->
    <link rel="stylesheet" href="{{ template }}/assets/css/ace-fonts.css" />

    <!-- ace styles -->
    <link rel="stylesheet" href="{{ template }}/assets/css/ace.css" />

    <!--[if lte IE 9]>
    <link rel="stylesheet" href="{{ template }}/assets/css/ace-part2.css" />
    <![endif]-->

    <!--[if lte IE 9]>
    <link rel="stylesheet" href="{{ template }}/assets/css/ace-ie.css" />
    <![endif]-->

    <!-- HTML5shiv and Respond.js for IE8 to support HTML5 elements and media queries -->

    <!--[if lte IE 8]>
    <script src="{{ template }}/components/html5shiv/dist/html5shiv.min.js"></script>
    <script src="{{ template }}/components/respond/dest/respond.min.js"></script>
    <![endif]-->
</head>

<body class="login-layout light-login">
<div class="main-container">
    <div class="main-content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="login-container">
                    <div class="center">
                        <h1>
                            <i class="ace-icon fa fa-cutlery orange"></i>
                            <span class="orange">La Cuisine</span>
                        </h1>
                        <h4 class="blue" id="id-company-text">&copy; MonsieurGourmand.com</h4>
                    </div>

                    <div class="space-6"></div>
                    {% block content %}{% endblock %}
                </div>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.main-content -->
</div><!-- /.main-container -->
</body>
</html>
